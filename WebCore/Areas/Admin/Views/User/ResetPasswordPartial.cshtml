@model WebCore.Services.Share.Admins.Users.Dto.UserResetPasswordInput
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">@Html.Lang("LBL_USER_RESET_PASSWORD")</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">@Html.Lang("LBL_USER_RESET_PASSWORD_COMMON")</h4>
            </div>
            <div class="card-body">
                <form data-noreload="true"
                      data-on-submit-done="onInputSubmitDone"
                      data-on-submit-fail="onInputSubmitFail"
                      method="post"
                      asp-action="InputInfoPartial"
                      id="saveInputForm">
                    <input asp-for="Id" type="hidden" class="form-control">
                    <input asp-for="UpdateToken" type="hidden" class="form-control">
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating" asp-for="Password">@(Html.LangFor<WebCore.Services.Share.Admins.Users.Dto.UserResetPasswordInput>(x => x.Password, "WebUser"))</label>
                            <input language-support="true" class="form-control" asp-for="Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating" asp-for="ConfirmPassword">@(Html.LangFor<WebCore.Services.Share.Admins.Users.Dto.UserResetPasswordInput>(x => x.ConfirmPassword, "WebUser"))</label>
                            <input language-support="true" class="form-control" asp-for="ConfirmPassword" required type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                            <button type="submit" class="btn btn-primary">@Html.Lang("LBL_SAVE")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">@Html.Lang("LBL_USER_RESET_PASSWORD_RANDOM")</h4>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="form-group bmd-form-group">
                        <button type="submit" class="btn btn-primary">@Html.Lang("LBL_RESET_PASSWORD_RANDOM")</button>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Html.Lang("LBL_CLOSE")</button>
            </div>
        </div>
    </div>
    <partial name="_ValidationScriptsPartial" />
    <script>
    </script>
