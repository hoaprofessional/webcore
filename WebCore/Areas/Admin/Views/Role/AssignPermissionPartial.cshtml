@using WebCore.Services.Share.Permissions.Dto
@model PermissionDto
@{
    Model.Name = "LBL_PERMISSION_CHECKALL";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">@Html.Lang("LBL_ASSIGN_PERMISSION")</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="card-body">
            <treeview model="Model" partialview-child="~/Areas/Admin/Views/Role/PermissionTreeItemPartial.cshtml"></treeview>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">@Html.Lang("LBL_CLOSE")</button>
            <button type="button" onclick="savePermission('@ViewBag.RoleId')" class="btn btn-primary">@Html.Lang("LBL_SAVE")</button>
        </div>
    </div>
</div>
